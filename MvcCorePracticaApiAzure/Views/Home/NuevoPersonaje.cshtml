@model List<Serie>

@{
    ViewData["Title"] = "NuevoPersonaje";
}

<h3 class="text-center"> Nuevo Personaje </h3>
<div class="card mx-auto">
    <div class="card-body">
        <form method="post">
            <input type="hidden" name="idPersonaje" value="0" />
            <div class="form-group">
                <label>Nombre</label>
                <input type="text" class="form-control" name="nombre">
            </div>
            <div class="form-group">
                <label>Imagen</label>
                <input type="text" class="form-control" name="imagen">
            </div>
            <div class="form-group">
                <label>Serie</label>
                <select class="form-control" name="idSerie">
                    @foreach (Serie serie in Model) {
                        <option value="@serie.IdSerie">@serie.Nombre</option>
                    }
                </select>
            </div>
            <button type="submit" class="btn btn-outline-dark">Crear</button>
        </form>
    </div>
</div>
